<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ji.smartclothes.avtivity.LoginActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="登 陆"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="20sp" />

        <EditText
            android:id="@+id/et_name_login_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="账号"
            android:layout_marginTop="20dp"
            android:maxLines="1"/>

        <EditText
            android:id="@+id/et_pwd_login_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="密码"
            android:inputType="textPassword"
            android:layout_marginTop="10dp"
            android:maxLines="1"/>


    <Button
        android:id="@+id/btn_login_login_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="登 录" />

    <Button
        android:id="@+id/btn_register_login_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="注 册" />

</LinearLayout>
